<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="omar.apps923.recycleradapters">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name=".Application"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
         android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.GenericAdapterActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".activities.NormalAdapterActivity"
            android:screenOrientation="portrait"
            />
            <activity
                android:name=".activities.DatabindingAdapterActivity1"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".activities.DatabindingAdapterActivity2"
            android:screenOrientation="portrait"
            />

    </application>

</manifest>